{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "rules": {
    "no-unused-vars": ["error", { "varsIgnorePattern": "^_|confirmDelete|updatePreview" }],
    "no-undef": "error"
  }
}